<Window x:Class="Example.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:clp="clr-namespace:ag.WPF.ColorPicker;assembly=ag.WPF.ColorPicker"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="DialogWindow" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <clp:ColorPicker x:Name="_second_picker" Width="50" Height="50" ButtonVisible="False" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <DockPanel Grid.Row="1">
            <Button IsCancel="True" Content="Cancel"/>
        </DockPanel>
    </Grid>
</Window>
