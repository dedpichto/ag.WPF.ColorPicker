<Window x:Class="TestColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:clp="clr-namespace:ag.WPF.ColorPicker;assembly=ag.WPF.ColorPicker"
        xmlns:local="clr-namespace:TestColorPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseDoubleClick="Window_MouseDoubleClick">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <clp:ColorPanel Margin="4" x:Name="_panel" IsEnabled="False" ColorApplied="_panel_ColorApplied" SelectedColorChanged="_panel_SelectedColorChanged" SelectedColor="Turquoise"/>
        <!--<clp:ColorSlider x:Name="_slider" VerticalAlignment="Stretch" Margin="12"/>
        <Rectangle Grid.Column="1" Width="96" Height="96">
            <Rectangle.Fill>
                <SolidColorBrush Color="{Binding ElementName=_slider, Path=SelectedColor}"/>
            </Rectangle.Fill>
        </Rectangle>-->
        <clp:ColorPicker Grid.Column="1" Height="21" Margin="4" SelectedColorChanged="ColorPicker_SelectedColorChanged"/>
    </Grid>
</Window>
